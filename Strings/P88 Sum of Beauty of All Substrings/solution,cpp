#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int beautySum(string s) {
        int n = s.size();
        int ans = 0;
        for (int i = 0; i < n; ++i) {
            vector<int> count(26, 0);
            for (int j = i; j < n; ++j) {
                count[s[j] - 'a']++;
                int maxCount = 0, minCount = n;
                for (int k = 0; k < 26; ++k) {
                    if (count[k] > 0) {
                        maxCount = max(maxCount, count[k]);
                        minCount = min(minCount, count[k]);
                    }
                }
                ans += (maxCount - minCount);
            }
        }
        return ans;
    }
};